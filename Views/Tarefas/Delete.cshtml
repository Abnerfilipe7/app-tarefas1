@model app_tarefas1.Models.Tarefa

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esta tarefa?</h3>
<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataCriacao)</dt>
        <dd class="col-sm-10">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataConclusao)</dt>
        <dd class="col-sm-10">@Model.DataConclusao?.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Concluida)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Concluida)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TipoId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tipo.Nome)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar Ã  Lista</a>
    </form>
</div>
