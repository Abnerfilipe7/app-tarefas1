@model app_tarefas1.Models.Tarefa

@{
    ViewData["Title"] = "Criar Tarefa";
}

<h1>Criar</h1>

<h4>Tarefa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataConclusao" class="control-label"></label>
                <input asp-for="DataConclusao" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataConclusao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concluida" class="control-label"></label>
                <input asp-for="Concluida" class="form-control" type="checkbox" />
                <span asp-validation-for="Concluida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoId" class="control-label"></label>
        <select asp-for="TipoId" class="form-control"
            asp-items="@(new SelectList(ViewData["Tipos"] as List<app_tarefas1.Models.Tipo>, "Id", "Nome"))">
            <option value="">-- Selecione um tipo --</option>
        </select>
                <span asp-validation-for="TipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
